
@{
    ViewBag.Title = "EAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Yeni Deneyim Ekleme Sayfası</h4>
<br />
<form method="post">
    <input type="text" name="Title" class="form-control" placeholder="Başlığı yazınız..." />
    <br />
    <input type="text" name="Subtitle" class="form-control" placeholder="Alt başlığı yazınız..." />
    <br />
    <input type="text" name="Date" class="form-control" placeholder="Çalışma tarihini yazınız..." />
    <br />
    <textarea name="Explanation" class="form-control" placeholder="Açıklama yazınız..." rows="5"></textarea>
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

