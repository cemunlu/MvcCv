@model MvcCv.Models.Entity.TblSkills
@{
    ViewBag.Title = "SEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yetenek Düzenleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Yetenek Açıklaması")
    @Html.TextBoxFor(x => x.Skill, new { @class = "form-control" })

    @Html.Label("Derece")
    @Html.TextBoxFor(x => x.Percent, new { @class = "form-control" })

    <button class="btn btn-success">Güncelle</button>
</form>