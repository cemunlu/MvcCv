@using MvcCv.Models.Entity
@model List<TblCertificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string renk = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div>
                <div class="row">

                    <!-- /.col -->
                    <div class="col-md-12">
                        <div class="card">
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">

                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {
                                            if (item.ID % 2 == 1)
                                            {
                                                renk = "bg-success";
                                            }
                                            else
                                            {
                                                renk = "bg-primary";
                                            }
                                            <div class="time-label">
                                                <span class="@renk">
                                                    @item.Date
                                                </span>
                                            </div>

                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>

                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @item.Certificate
                                                    </div>
                                                    <div class="timeline-footer">
                                                        <a href="/Certificate/CGet/@item.ID" class="btn btn-primary btn-sm">Düzenle</a>
                                                        <a href="/Certificate/CDelete/@item.ID" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    <a href="/Certificate/CAdd/" class="btn btn-info">Yeni Sertifika Ekle</a>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.row -->
    </section>
</body>
</html>
