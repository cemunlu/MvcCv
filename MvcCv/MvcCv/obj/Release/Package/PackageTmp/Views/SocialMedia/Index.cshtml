@using MvcCv.Models.Entity
@model List<TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ 
    string durum = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Meya Hesabı Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (@item.Status == true)
                                            {

                                                durum = "Aktif";
                                            }
                                            else
                                            {
                                                durum = "Pasif";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@durum</td>

                                                <td>
                                                    <a href="/SocialMedia/SmEdit/@item.ID" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i>Düzenle</a>
                                                </td>
                                                <td>
                                                    <a href="/SocialMedia/SmDelete/@item.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medya Ekleme Paneli</h2>
                    </div>
                    <form method="post" action="/SocialMedia/SmAdd">
                        <div class="modal-body">
                            <label>Sosyal Medya Adı: </label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki: </label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>Sosyal Medya İkon Değeri: </label>
                            <input type="text" name="Ikon" class="form-control" />
                            <br />
                            <button class="btn btn-info">Kaydet</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>



